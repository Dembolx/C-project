<Window x:Class="saper_pythoniarz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:saper_pythoniarz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Wybierz poziom trudności:" Margin="5"/>
            <ComboBox x:Name="DifficultyComboBox" Margin="5">
                <ComboBoxItem Content="Łatwy"/>
                <ComboBoxItem Content="Średni"/>
                <ComboBoxItem Content="Trudny"/>
            </ComboBox>
            <Button Content="Rozpocznij grę" Click="StartGame_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
